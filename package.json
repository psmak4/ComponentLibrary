{
	"name": "componentlibrary",
	"version": "1.0.0",
	"scripts": {
		"css": "npm-run-all css:compile css:prefix css:minify",
		"css:compile": "node-sass --output-style expanded --source-map true -o dist/css src",
		"css:prefix": "postcss -u autoprefixer --autoprefixer.browsers '> 5%, ie 9' -r dist/css/*.css",
		"css:minify": "cleancss --level 1 --source-map --output dist/css/cl.min.css dist/css/cl.css",
		"watch:css": "nodemon --ignore dist/ -e scss -x \"npm run css\""
	},
	"devDependencies": {
		"autoprefixer": "^7.1.1",
		"clean-css-cli": "^4.1.3",
		"http-server": "^0.10.0",
		"node-sass": "^4.5.3",
		"nodemon": "^1.11.0",
		"npm-run-all": "^4.0.2",
		"postcss-cli": "^4.0.0"
	}
}
